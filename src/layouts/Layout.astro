---
import "@fontsource/outfit/400.css";
import "@fontsource/outfit/500.css";
import "@fontsource/outfit/700.css";
import "../styles/global.css";
import Header from "../components/Header.jsx";
import LocalSeoFooter from "../components/LocalSeoFooter.astro";
import StickyCTA from "../components/StickyCTA.jsx";

interface Props {
    title: string;
    description?: string;
    service?: string;
    city?: string;
    areas?: string[];
    postcodes?: string[];
    phone?: string;
}

const {
    title,
    description = "Expert Local Roofers",
    service = "Roofing Services",
    city = "Leeds",
    areas = [
        "Headingley",
        "Horsforth",
        "Chapel Allerton",
        "Roundhay",
        "Moortown",
    ],
    postcodes = ["LS6", "LS18", "LS7", "LS8", "LS17"],
    phone = "0113 900 1234",
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body
        class="min-h-screen flex flex-col overflow-x-hidden selection:bg-accent selection:text-white"
    >
        <!-- Sticky Header (Desktop) -->
        <Header client:load title={title.split(" - ")[0]} phone={phone} />

        <!-- Sticky CTA (Mobile) -->
        <StickyCTA client:load number={phone} label="Call For Quote" />

        <slot />

        <LocalSeoFooter
            service={service}
            city={city}
            areas={areas}
            postcodes={postcodes}
        />

        <footer class="bg-gray-900 text-white py-12">
            <div
                class="max-w-7xl mx-auto px-6 lg:px-8 flex flex-col md:flex-row justify-between items-center gap-6"
            >
                <div class="text-sm text-gray-400">
                    &copy; {new Date().getFullYear()}
                    {title}. All rights reserved.
                </div>
                <div class="flex gap-6">
                    <a
                        href="/admin"
                        class="text-sm font-semibold text-accent hover:text-white transition-colors flex items-center gap-2"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><rect
                                width="18"
                                height="18"
                                x="3"
                                y="3"
                                rx="2"
                                ry="2"></rect><path d="M9 3v18"></path><path
                                d="m14 9 3 3-3 3"></path></svg
                        >
                        Admin Portal
                    </a>
                </div>
            </div>
        </footer>
    </body>
</html>
