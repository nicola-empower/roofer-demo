---
import Layout from "../layouts/Layout.astro";
import TrustBar from "../components/TrustBar.jsx";
import Testimonials from "../components/Testimonials.jsx";
import FAQ from "../components/FAQ.jsx";
import FeatureSection from "../components/FeatureSection.jsx";
import ServiceAreaMap from "../components/ServiceAreaMap.jsx";
import ProcessFlow from "../components/ProcessFlow.jsx";
import SafetyGuarantee from "../components/SafetyGuarantee.jsx";
---

<Layout title="Summit Roofing - Slate, Tile & Flat Roof Specialists">
	<main class="relative isolate overflow-hidden bg-white">
		<!-- Hero Section -->
		<div class="relative h-screen w-full overflow-hidden">
			<img
				src="/hero.png"
				alt="High quality roofing background"
				class="absolute inset-0 -z-10 h-full w-full object-cover object-center brightness-[0.4]"
			/>

			<div
				class="mx-auto max-w-7xl px-6 lg:px-8 h-full flex flex-col justify-center relative z-10"
			>
				<div class="max-w-2xl animate-fade-in-up">
					<div class="hidden sm:mb-8 sm:flex">
						<div
							class="relative rounded-full px-3 py-1 text-sm leading-6 text-gray-300 ring-1 ring-white/20 hover:ring-white/40 transition-all"
						>
							10 Year Guarantee on all New Roofs <a
								href="#"
								class="font-semibold text-accent"
								><span
									class="absolute inset-0"
									aria-hidden="true"></span>Warranty Details <span
									aria-hidden="true">&rarr;</span
								></a
							>
						</div>
					</div>
					<h1
						class="text-5xl font-bold tracking-tight text-white sm:text-7xl mb-6 drop-shadow-lg"
					>
						Superior Protection Above <span class="text-accent"
							>Everything Else</span
						>
					</h1>
					<p
						class="mt-6 text-lg leading-8 text-gray-200 drop-shadow-md"
					>
						From heritage slate restorations to modern flat rubber
						roofing. We ensure your home is weatherproof, beautiful,
						and secure for decades to come.
					</p>
					<div class="mt-10 flex items-center gap-x-6">
						<a
							href="#"
							class="rounded-full bg-accent px-8 py-3.5 text-lg font-semibold text-white shadow-lg hover:bg-accent/90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent transition-all duration-300 scale-100 hover:scale-105"
						>
							Free Roof Inspection
						</a>
						<a
							href="#"
							class="text-lg font-semibold leading-6 text-white hover:text-accent transition-colors"
						>
							Our Work <span aria-hidden="true">→</span>
						</a>
					</div>
				</div>
			</div>

			<!-- Glassmorphism Stats -->
			<div
				class="absolute bottom-0 left-0 right-0 bg-white/5 backdrop-blur-md border-t border-white/10 py-8"
			>
				<div
					class="mx-auto max-w-7xl px-6 lg:px-8 flex justify-around text-white text-center"
				>
					<div>
						<div class="text-3xl font-bold text-accent">5k+</div>
						<div class="text-sm text-gray-300">Roofs Installed</div>
					</div>
					<div>
						<div class="text-3xl font-bold text-accent">24h</div>
						<div class="text-sm text-gray-300">Storm Response</div>
					</div>
					<div>
						<div class="text-3xl font-bold text-accent">NFRC</div>
						<div class="text-sm text-gray-300">
							Certified Member
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="relative z-20 bg-white"><TrustBar client:visible /></div>

		<FeatureSection
			client:visible
			title="Protection Meets Design"
			subtitle="Complete Weatherproofing"
			description="Your roof is your home's first line of defence. We combine traditional roofing craftsmanship with modern high-performance materials to deliver roofs that look stunning and last for decades."
			features={[
				{
					title: "Heritage Slate",
					desc: "Specialist restoration for period properties.",
				},
				{
					title: "Flat Roofing",
					desc: "EPDM rubber and GRP fibreglass systems.",
				},
				{
					title: "Storm Damage",
					desc: "Rapid emergency response and insurance work.",
				},
			]}
			imageSrc="/hero.png"
			quote="We had three other quotes, but Summit were the only ones who really understood the heritage requirements."
			author="Mr. & Mrs. Davies, Oxford"
			align="right"
		/>

		<!-- Trust Magnet "We Care" Section -->
		<div class="py-24 bg-stone-50">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="mx-auto max-w-2xl text-center">
					<h2 class="text-base font-semibold leading-7 text-accent">
						Why Choose Summit
					</h2>
					<p
						class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl"
					>
						A Leaking Roof Damages Your Entire Home
					</p>
					<p class="mt-6 text-lg leading-8 text-gray-600">
						We understand the panic of a storm-damaged roof. Water
						ingress can ruin ceilings and electrics in minutes.
						That’s why we offer rapid response, use drone surveys
						for safe inspection, and don’t leave until your home is
						100% watertight.
					</p>
				</div>
			</div>
		</div>

		<ProcessFlow client:visible />

		<!-- Service Area Map Section -->
		<div class="py-24 bg-white">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="mx-auto max-w-2xl text-center mb-16">
					<h2 class="text-base font-semibold leading-7 text-accent">
						Local Coverage
					</h2>
					<p
						class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl"
					>
						Serving Leeds & Yorkshire
					</p>
					<p class="mt-4 text-lg text-gray-500">
						Reliable roofing services across Headingley, Horsforth,
						and the wider Leeds area.
					</p>
				</div>
				<ServiceAreaMap
					client:only="react"
					center={[53.8008, -1.5491]}
					city="Leeds"
					radiusMiles={20}
				/>
			</div>
		</div>
		<Testimonials client:visible />
		<SafetyGuarantee client:visible />
		<FAQ client:visible />
	</main>
</Layout>
