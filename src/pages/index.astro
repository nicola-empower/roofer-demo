---
import Layout from "../layouts/Layout.astro";
import TrustBar from "../components/TrustBar.jsx";
import Testimonials from "../components/Testimonials.jsx";
import FAQ from "../components/FAQ.jsx";
import FeatureSection from "../components/FeatureSection.jsx";
import ProcessFlow from "../components/ProcessFlow.jsx";
import ServiceAreaMap from "../components/ServiceAreaMap.jsx";
import {
	Home,
	Umbrella,
	Hammer,
	Camera,
	ShieldCheck,
	CloudLightning,
} from "lucide-react";

const serviceFeatures = [
	{
		title: "Heritage Slate & Tiling",
		desc: "Specialists in sourcing reclaimed slate to match period properties perfectly. Invisible restoration.",
		icon: Home,
	},
	{
		title: "Modern Flat Roofing",
		desc: "Seamless EPDM rubber and GRP fibreglass systems. 20-year manufacturer warranties. No more bubbling felt.",
		icon: Umbrella,
	},
	{
		title: "Storm Damage Repairs",
		desc: "Rapid response to secure your property. We fix loose tiles and leaking valleys before water causes internal damage.",
		icon: CloudLightning,
	},
];
---

<Layout title="Summit Roofing | Heritage & Flat Roofing Specialists">
	<main class="relative isolate overflow-hidden bg-white">
		<!-- Hero Section -->
		<div class="relative h-screen w-full overflow-hidden">
			<img
				src="/hero.png"
				alt="Roofer working on slate roof"
				class="absolute inset-0 -z-10 h-full w-full object-cover object-center brightness-[0.6]"
			/>
			<div class="absolute inset-0 bg-slate-900/40 -z-10"></div>

			<div
				class="mx-auto max-w-7xl px-6 lg:px-8 h-full flex flex-col justify-center relative z-10"
			>
				<div class="max-w-3xl animate-fade-in-up">
					<div class="hidden sm:mb-8 sm:flex">
						<div
							class="relative rounded-full px-3 py-1 text-sm leading-6 text-slate-300 ring-1 ring-slate-100/20 hover:ring-slate-100/40 transition-all uppercase tracking-wide font-bold bg-slate-800/50 backdrop-blur-sm"
						>
							10-Year Insurance Backed Guarantee
						</div>
					</div>
					<h1
						class="text-4xl font-header font-bold tracking-tight text-white sm:text-6xl mb-6 drop-shadow-md"
					>
						Preserving Your Home's <br />
						<span class="text-accent">Structural Integrity.</span>
					</h1>
					<p
						class="mt-6 text-xl leading-8 text-white/90 drop-shadow-sm max-w-2xl font-body"
					>
						From heritage slate restoration to modern EPDM flat
						roofing. We combine traditional skills with advanced
						drone surveys to protect your biggest investment.
					</p>
					<div class="mt-10 flex flex-wrap items-center gap-6">
						<a
							href="/drone"
							class="rounded-none bg-orange-600 px-8 py-3.5 text-lg font-bold text-white shadow-lg hover:bg-orange-500 transition-all duration-300 uppercase tracking-wider"
						>
							Book Free Drone Check
						</a>
						<a
							href="/services"
							class="rounded-none bg-transparent border-2 border-white px-8 py-3.5 text-lg font-bold text-white hover:bg-white hover:text-slate-900 transition-all duration-300 uppercase tracking-wider"
						>
							View Our Work
						</a>
					</div>
				</div>
			</div>
		</div>

		<!-- TrustBar -->
		<div class="relative z-20 bg-white border-b border-gray-100">
			<TrustBar client:visible />
		</div>

		<!-- Services Section -->
		<FeatureSection
			client:visible
			title="Protection Meets Design"
			subtitle="Our Expertise"
			description="Roofing is split between making it look perfect (Slate) and stopping the water forever (Flat). We excel at both."
			features={serviceFeatures}
			imageSrc="/hero.png"
			align="right"
			quote={null}
			author={null}
		/>

		<!-- Drone Tech Feature (MVP) -->
		<div class="py-24 bg-slate-900 relative overflow-hidden text-white">
			<div
				class="absolute top-0 right-0 -mr-24 -mt-24 w-96 h-96 bg-orange-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob"
			>
			</div>

			<div class="mx-auto max-w-7xl px-6 lg:px-8 relative z-10">
				<div class="lg:grid lg:grid-cols-2 lg:gap-16 items-center">
					<div>
						<div
							class="inline-flex items-center rounded-full bg-orange-400/10 px-3 py-1 text-sm font-medium text-orange-400 ring-1 ring-inset ring-orange-400/20 mb-6"
						>
							Technology Driven
						</div>
						<h2
							class="text-3xl font-bold tracking-tight text-white sm:text-5xl mb-6 font-serif"
						>
							See Your Roof Like <br /> Never Before
						</h2>
						<p class="text-lg text-slate-300 mb-8 leading-relaxed">
							Why guess what the problem is? We use 4K Drone
							Technology to survey your roof safely and quickly.
						</p>
						<ul class="space-y-6">
							<li class="flex gap-4">
								<div
									class="mt-1 flex h-12 w-12 flex-none items-center justify-center rounded-lg bg-slate-800 border border-slate-700 shadow-lg"
								>
									<ShieldCheck
										class="h-6 w-6 text-orange-500"
									/>
								</div>
								<div>
									<h3 class="font-bold text-white text-lg">
										Zero Risk
									</h3>
									<p class="text-slate-400">
										No ladders, scaffolding, or foot traffic
										on your delicate tiles for the quote.
									</p>
								</div>
							</li>
							<li class="flex gap-4">
								<div
									class="mt-1 flex h-12 w-12 flex-none items-center justify-center rounded-lg bg-slate-800 border border-slate-700 shadow-lg"
								>
									<Camera class="h-6 w-6 text-orange-500" />
								</div>
								<div>
									<h3 class="font-bold text-white text-lg">
										Visual Proof
									</h3>
									<p class="text-slate-400">
										You receive a full digital report with
										4K photos showing exactly where the
										damage is.
									</p>
								</div>
							</li>
						</ul>
						<div class="mt-10">
							<a
								href="/drone"
								class="inline-flex items-center gap-2 text-orange-500 font-bold hover:text-orange-400 transition-colors uppercase tracking-wide"
							>
								Learn about Drone Surveys <span
									aria-hidden="true">&rarr;</span
								>
							</a>
						</div>
					</div>
					<div class="mt-12 lg:mt-0 relative">
						<div
							class="relative rounded-2xl overflow-hidden shadow-2xl border border-slate-700 group"
						>
							<img
								src="/hero.png"
								alt="Drone view of roof"
								class="w-full grayscale group-hover:grayscale-0 transition-all duration-700"
							/>
							<div
								class="absolute inset-0 bg-gradient-to-t from-slate-900 via-transparent to-transparent opacity-60"
							>
							</div>
							<div
								class="absolute bottom-4 left-4 flex items-center gap-2 text-white font-mono text-xs"
							>
								<div
									class="w-2 h-2 bg-red-500 rounded-full animate-pulse"
								>
								</div>
								REC [00:14:23]
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Problem/Solution Section -->
		<div class="bg-stone-100 py-24 sm:py-32">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="mx-auto max-w-2xl text-center">
					<h2
						class="text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl font-serif"
					>
						A Small Leak is a Big Problem
					</h2>
					<p class="mt-6 text-lg leading-8 text-gray-600">
						Water ingress doesn't just stain your ceiling; it rots
						timber and destroys insulation. We don't patch over
						cracks; we solve the root cause.
					</p>
				</div>
				<div
					class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-4xl"
				>
					<dl
						class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-10 lg:max-w-none lg:grid-cols-2 lg:gap-y-16"
					>
						<div class="relative pl-16">
							<dt
								class="text-base font-semibold leading-7 text-slate-900"
							>
								<div
									class="absolute left-0 top-0 flex h-10 w-10 items-center justify-center rounded-lg bg-orange-600"
								>
									<Camera
										class="h-6 w-6 text-white"
										aria-hidden="true"
									/>
								</div>
								Photo Evidence
							</dt>
							<dd class="mt-2 text-base leading-7 text-gray-600">
								We take "Before" and "After" photos of every
								repair, so you have complete peace of mind.
							</dd>
						</div>
						<div class="relative pl-16">
							<dt
								class="text-base font-semibold leading-7 text-slate-900"
							>
								<div
									class="absolute left-0 top-0 flex h-10 w-10 items-center justify-center rounded-lg bg-orange-600"
								>
									<Hammer
										class="h-6 w-6 text-white"
										aria-hidden="true"
									/>
								</div>
								Fixed Quotes
							</dt>
							<dd class="mt-2 text-base leading-7 text-gray-600">
								No "escalating costs" once we are up the ladder.
								The price we quote is the price you pay.
							</dd>
						</div>
					</dl>
				</div>
			</div>
		</div>

		<!-- Recent Work Section -->
		<div class="bg-white py-24 sm:py-32">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="mx-auto max-w-2xl text-center mb-16">
					<h2
						class="text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl font-serif"
					>
						Recent Work
					</h2>
					<p class="mt-4 text-lg text-gray-600">
						Latest roofing projects and repairs.
					</p>
				</div>
				<div class="mx-auto max-w-4xl">
					<img
						src="/roofer.png"
						alt="Recent roofing project"
						class="w-full rounded-2xl shadow-xl ring-1 ring-slate-900/10 object-cover aspect-video"
					/>
				</div>
			</div>
		</div>

		<!-- Service Area Map Section -->
		<div class="py-24 bg-white relative">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="mx-auto max-w-2xl text-center mb-16">
					<h2 class="text-base font-semibold leading-7 text-accent">
						Local Coverage
					</h2>
					<p
						class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl"
					>
						Serving Oxford & Beyond
					</p>
					<p class="mt-4 text-lg text-gray-500">
						Providing expert roofing services across Oxford and the
						surrounding areas.
					</p>
				</div>
				<ServiceAreaMap
					client:only="react"
					center={[51.752, -1.2577]}
					city="Oxford"
					radiusMiles={25}
				/>
			</div>
		</div>

		<Testimonials
			client:visible
			reviews={[
				{
					text: "We live in a listed building, so the slate had to match perfectly. Summit Roofing sourced the exact materials and the craftsmanship is invisibleâ€”it looks like it's always been there.",
					author: "Mr. & Mrs. Davies",
					location: "Oxford",
					role: "Heritage Restoration",
					rating: 5,
				},
				{
					text: "Three other roofers tried to patch our flat roof. Summit stripped it back, installed a Firestone rubber system, and it hasn't leaked a drop since.",
					author: "Peter K.",
					location: "Leeds",
					role: "Flat Roofing",
					rating: 5,
				},
				{
					text: "The drone survey was brilliant. They showed me the photos of the cracked tiles so I knew exactly what I was paying for. No hidden costs.",
					author: "Sarah Thompson",
					location: "York",
					role: "Roof Repair",
					rating: 5,
				},
			]}
		/>

		<!-- CTA Section -->
		<div class="bg-slate-900 py-16 sm:py-24" id="contact">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="mx-auto max-w-2xl text-center">
					<h2
						class="text-3xl font-bold tracking-tight text-white sm:text-4xl font-serif"
					>
						Is your roof winter-ready?
					</h2>
					<p
						class="mx-auto mt-6 max-w-xl text-lg leading-8 text-slate-300"
					>
						Don't wait for the first storm of the season. Book your
						drone inspection today and get ahead of the weather.
					</p>
					<div class="mt-10 flex justify-center gap-x-6">
						<a
							href="/contact"
							class="rounded-none bg-orange-600 px-8 py-3.5 text-lg font-bold text-white shadow-xl hover:bg-orange-500 transition-all uppercase tracking-wide"
							>Book Inspection</a
						>
					</div>
				</div>
			</div>
		</div>

		<FAQ client:visible />
	</main>
</Layout>
