---
import Layout from "../layouts/Layout.astro";
import { Phone, Mail, MapPin, Camera } from "lucide-react";
---

<Layout title="Contact | Summit Roofing">
    <main class="bg-white min-h-screen">
        <div class="bg-slate-900 py-16 sm:py-24">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="mx-auto max-w-2xl lg:mx-0">
                    <h1
                        class="text-4xl font-bold tracking-tight text-white sm:text-6xl font-serif"
                    >
                        Get a Free Quote
                    </h1>
                    <p class="mt-6 text-lg leading-8 text-slate-300">
                        Book a drone inspection or request a callback. We
                        operate throughout Yorkshire.
                    </p>
                </div>
            </div>
        </div>

        <div
            class="mx-auto max-w-7xl px-6 lg:px-8 -mt-12 sm:-mt-24 relative z-10 pb-24"
        >
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Info Card -->
                <div
                    class="bg-slate-800 text-white p-8 shadow-xl h-fit border-t-4 border-orange-500"
                >
                    <h3 class="text-2xl font-bold font-serif mb-6">
                        Contact Details
                    </h3>
                    <div class="space-y-6">
                        <div class="flex items-start gap-4">
                            <Phone class="mt-1 h-6 w-6 text-orange-500" />
                            <div>
                                <p class="font-bold">24h Emergency Line</p>
                                <a
                                    href="tel:08001234567"
                                    class="hover:text-orange-400 transition-colors"
                                    >0800 123 4567</a
                                >
                            </div>
                        </div>
                        <div class="flex items-start gap-4">
                            <Mail class="mt-1 h-6 w-6 text-orange-500" />
                            <div>
                                <p class="font-bold">Email</p>
                                <a
                                    href="mailto:info@summitroofing.co.uk"
                                    class="hover:text-orange-400 transition-colors"
                                    >info@summitroofing.co.uk</a
                                >
                            </div>
                        </div>
                        <div class="flex items-start gap-4">
                            <MapPin class="mt-1 h-6 w-6 text-orange-500" />
                            <div>
                                <p class="font-bold">Head Office</p>
                                <p>Leeds, West Yorkshire.</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Form -->
                <div
                    class="lg:col-span-2 bg-white shadow-xl p-8 sm:p-12 border border-gray-200"
                >
                    <form class="space-y-8">
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                            <div>
                                <label
                                    for="first-name"
                                    class="block text-sm font-medium leading-6 text-gray-900"
                                    >First name</label
                                >
                                <div class="mt-2">
                                    <input
                                        type="text"
                                        name="first-name"
                                        id="first-name"
                                        autocomplete="given-name"
                                        class="block w-full rounded-none border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-orange-600 sm:text-sm sm:leading-6"
                                    />
                                </div>
                            </div>
                            <div>
                                <label
                                    for="last-name"
                                    class="block text-sm font-medium leading-6 text-gray-900"
                                    >Last name</label
                                >
                                <div class="mt-2">
                                    <input
                                        type="text"
                                        name="last-name"
                                        id="last-name"
                                        autocomplete="family-name"
                                        class="block w-full rounded-none border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-orange-600 sm:text-sm sm:leading-6"
                                    />
                                </div>
                            </div>
                            <div class="sm:col-span-2">
                                <label
                                    for="email"
                                    class="block text-sm font-medium leading-6 text-gray-900"
                                    >Email address</label
                                >
                                <div class="mt-2">
                                    <input
                                        id="email"
                                        name="email"
                                        type="email"
                                        autocomplete="email"
                                        class="block w-full rounded-none border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-orange-600 sm:text-sm sm:leading-6"
                                    />
                                </div>
                            </div>

                            <!-- Service Type -->
                            <div class="sm:col-span-2">
                                <label
                                    class="block text-sm font-medium leading-6 text-gray-900 mb-2"
                                    >Service Required</label
                                >
                                <select
                                    id="service"
                                    name="service"
                                    class="block w-full rounded-none border-0 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-orange-600 sm:text-sm sm:leading-6"
                                >
                                    <option>Book Drone Inspection</option>
                                    <option>Roof Repair / Leak</option>
                                    <option>New Roof Estimate</option>
                                    <option>Flat Roofing</option>
                                    <option>Heritage / Slate Work</option>
                                </select>
                            </div>

                            <div class="sm:col-span-2">
                                <label
                                    for="message"
                                    class="block text-sm font-medium leading-6 text-gray-900"
                                    >Project Details</label
                                >
                                <div class="mt-2">
                                    <textarea
                                        id="message"
                                        name="message"
                                        rows="4"
                                        class="block w-full rounded-none border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-orange-600 sm:text-sm sm:leading-6"
                                        placeholder="Describe your roofing issue..."
                                    ></textarea>
                                </div>
                            </div>
                        </div>
                        <button
                            type="submit"
                            class="w-full rounded-none bg-orange-600 px-3.5 py-2.5 text-center text-sm font-bold uppercase tracking-wide text-white shadow-sm hover:bg-orange-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-600 transition-all"
                            >Submit Enquiry</button
                        >
                    </form>
                </div>
            </div>
        </div>
    </main>
</Layout>
